{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Aventor",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png",
    "href": "https://aventor.ai"
  },
  "icons": {
    "library": "lucide"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Open Aventor",
      "href": "https://aventor.ai"
    },
    "links": [
      { "label": "Support", "href": "mailto:info@aventor.ai" }
    ]
  },
  "navigation": {
    "anchors": [
      { "anchor": "App", "href": "https://aventor.ai", "icon": "rocket" },
      { "anchor": "Support", "href": "mailto:info@aventor.ai", "icon": "envelope" }
    ],
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "getting-started", "video-tutorial", "faq"]
          },
          {
            "group": "Create Ads",
            "pages": [
              "create-ads/overview",
              "create-ads/brand-enrichment",
              "create-ads/assets-attachments",
              "create-ads/generate-images",
              "create-ads/edit-variations",
              "create-ads/preview-export"
            ]
          },
          {
            "group": "Campaigns",
            "pages": [
              "campaigns/overview",
              "campaigns/ad-goals",
              "campaigns/audience-targeting",
              "campaigns/budget-allocation",
              "campaigns/review-launch"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/overview",
              "integrations/meta-ads",
              "integrations/google-ads"
            ]
          },
          {
            "group": "Help",
            "pages": ["help/troubleshooting", "help/limits-safety", "help/credits-billing"]
          }
        ]
      },
      {
        "tab": "Changelog",
        "pages": ["changelog"]
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/aventor_ai",
      "github": "https://github.com/tj150695/Aventor"
    }
  }
}
